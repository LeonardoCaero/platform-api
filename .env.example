# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_USER=caero
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_DB=caero_db

# ── API ───────────────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=3000

# JWT (use long random strings — e.g. openssl rand -base64 48)
JWT_SECRET=change_me_jwt_secret_min_32_chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=change_me_refresh_secret_min_32_chars
REFRESH_TOKEN_EXPIRES_IN=7d

# Invite expiry
COMPANY_INVITE_EXPIRY_HOURS=72
MEMBER_INVITE_EXPIRY_HOURS=168

# ── Frontend (baked at build time) ────────────────────────────────────────────
# Replace with your NAS local IP or domain
VITE_API_URL=http://192.168.1.100:4000/api
